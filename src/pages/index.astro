---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
import { slide, fade } from "astro:transitions";
const posts = await getCollection("posts");
---

<Layout
  title="FinalBoss - revisa las últimas noticias del mundo de los videojuegos"
>
  <section class="h-full w-full p-6 min-h-screen">
    <div
      class="max-w-7xl mx-auto grid gap-5 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4"
    >
      {
        posts.map((post) => (
          <article class="bg-gray-900 rounded-xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-1 border border-gray-800">
            <div class="relative">
              <img
                src={post.data.img}
                alt={post.data.title}
                transition:name={`poster-${post.data.title}`}
                class="w-full h-40 object-cover transition-transform duration-300 hover:scale-105"
              />
              <div class="absolute top-2 left-2 flex flex-wrap gap-1">
                {post.data.etiquetas.map((tag) => (
                  <span class="bg-black/70 text-[10px] text-white px-2 py-0.5 rounded-full border border-gray-700">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
            <div class="p-3">
              <h1 class="text-base font-semibold text-white mb-1 hover:text-yellow-400 transition-colors duration-200 line-clamp-2">
                {post.data.title}
              </h1>
              <p class="text-gray-400 text-xs mb-2 line-clamp-2">
                {post.data.description}
              </p>
              <div class="flex justify-between items-center text-[11px] text-gray-500">
                <span>{post.data.time}</span>
                <a
                  href={`/posts/${post.slug}`}
                  class="text-yellow-400 hover:text-yellow-300 font-medium"
                >
                  Leer más →
                </a>
              </div>
            </div>
          </article>
        ))
      }
    </div>
  </section>
</Layout>
